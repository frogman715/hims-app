// ==========================================
// PERMISSION CHECKING UTILITIES
// ==========================================

export function hasPermission(
  userRole: UserRole,
  module: string,
  requiredPermission: PermissionLevel
): boolean {
  const moduleConfig = ALL_MODULES.find(m => m.module === module);
  if (!moduleConfig) return false;

  const userPermission = moduleConfig.permissions[userRole];
  if (userPermission === PermissionLevel.NONE) return false;

  // Permission hierarchy: ADMIN > APPROVE > DELETE > EDIT > CREATE > VIEW
  const permissionHierarchy = {
    [PermissionLevel.ADMIN]: 6,
    [PermissionLevel.APPROVE]: 5,
    [PermissionLevel.DELETE]: 4,
    [PermissionLevel.EDIT]: 3,
    [PermissionLevel.CREATE]: 2,
    [PermissionLevel.VIEW]: 1,
    [PermissionLevel.NONE]: 0
  };

  return permissionHierarchy[userPermission] >= permissionHierarchy[requiredPermission];
}

export function getUserModules(userRole: UserRole): ModulePermission[] {
  return ALL_MODULES.filter(module =>
    module.permissions[userRole] !== PermissionLevel.NONE
  );
}

export function getModulePermission(
  userRole: UserRole,
  module: string
): PermissionLevel {
  const moduleConfig = ALL_MODULES.find(m => m.module === module);
  return moduleConfig?.permissions[userRole] || PermissionLevel.NONE;
}

