// ==========================================
// UTILITY FUNCTIONS
// ==========================================

export function hasPermission(
  userRole: UserRole,
  module: ModuleName,
  requiredLevel: PermissionLevel
): boolean {
  const userPermissions = PERMISSION_MATRIX[userRole];
  if (!userPermissions) return false;

  const userLevel = userPermissions[module];
  if (!userLevel) return false;

  // Permission hierarchy: NO_ACCESS < VIEW_ACCESS < EDIT_ACCESS < FULL_ACCESS
  const hierarchy = ['NO_ACCESS', 'VIEW_ACCESS', 'EDIT_ACCESS', 'FULL_ACCESS'];
  const userIndex = hierarchy.indexOf(userLevel);
  const requiredIndex = hierarchy.indexOf(requiredLevel);

  return userIndex >= requiredIndex;
}

export function hasSensitivityAccess(
  userRole: UserRole,
  sensitivity: DataSensitivity
): boolean {
  return SENSITIVITY_ACCESS_MATRIX[userRole]?.[sensitivity] ?? false;
}

export function canAccessData(
  userRole: UserRole,
  module: ModuleName,
  sensitivity: DataSensitivity,
  requiredLevel: PermissionLevel = PermissionLevel.VIEW_ACCESS
): boolean {
  // Check module permission
  if (!hasPermission(userRole, module, requiredLevel)) {
    return false;
  }

  // Check sensitivity access
  if (!hasSensitivityAccess(userRole, sensitivity)) {
    return false;
  }

  return true;
}

// ==========================================
// BUSINESS RULES VALIDATION
// ==========================================

export function validateCrewPortalAccess(
  userRole: UserRole,
  requestedCrewId: string,
  currentUserCrewId?: string
): boolean {
  // CREW_PORTAL can only access their own data
  if (userRole === UserRole.CREW_PORTAL) {
    return currentUserCrewId === requestedCrewId;
  }

  // Other roles can access any crew data (subject to module permissions)
  return true;
}

export function validateMedicalDataAccess(
  userRole: UserRole,
  isOwnData: boolean = false
): boolean {
  // RED medical data access rules
  if (userRole === UserRole.CREW_PORTAL) {
    return isOwnData; // Only own medical data
  }

  if (userRole === UserRole.ACCOUNTING || userRole === UserRole.OPERATIONAL) {
    return false; // No medical data access
  }

  return hasSensitivityAccess(userRole, DataSensitivity.RED);
}

export function validateSEAContentAccess(
  userRole: UserRole,
  isOwnContract: boolean = false
): boolean {
  // Full SEA content is RED data
  if (userRole === UserRole.CREW_PORTAL) {
    return isOwnContract; // Only own SEA
  }

  if (userRole === UserRole.ACCOUNTING) {
    return false; // Accounting cannot see full SEA content
  }

  return hasSensitivityAccess(userRole, DataSensitivity.RED);
}
