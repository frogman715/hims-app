function KpiCard({
  value,
  variant,
  subtitle,
  icon,
  trend,
  chart
}: {
  value: number | string;
  variant: 'primary' | 'success' | 'warning' | 'danger' | 'info';
  subtitle?: string;
  icon?: string;
  trend?: { value: number; direction: 'up' | 'down' };
  chart?: number[];
}) {
  const variants = {
    primary: 'from-blue-500 to-blue-600',
    success: 'from-emerald-500 to-emerald-600',
    warning: 'from-amber-500 to-amber-600',
    danger: 'from-red-500 to-red-600',
    info: 'from-cyan-500 to-cyan-600'
  };

  return (
    <div className={`bg-gradient-to-br ${variants[variant]} rounded-3xl p-6 text-white shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 hover:scale-105 relative overflow-hidden group`}>
      {/* Animated background pattern */}
      <div className="absolute inset-0 opacity-10">
        <div className="absolute top-0 right-0 w-32 h-32 bg-white rounded-full -translate-y-16 translate-x-16"></div>
        <div className="absolute bottom-0 left-0 w-24 h-24 bg-white rounded-full translate-y-12 -translate-x-12"></div>
      </div>

      <div className="relative z-10">
        <div className="flex items-center justify-between mb-4">
          <div className="text-4xl group-hover:scale-110 transition-transform duration-300">{icon}</div>
          {trend && (
            <div className={`flex items-center text-sm px-2 py-1 rounded-full ${
              trend.direction === 'up' ? 'bg-green-500/20 text-green-200' : 'bg-red-500/20 text-red-200'
            }`}>
              <span className="mr-1">{trend.direction === 'up' ? 'â†—' : 'â†˜'}</span>
              {trend.value}%
            </div>
          )}
        </div>

        <div className="text-4xl font-bold mb-2 group-hover:scale-105 transition-transform duration-300">{value}</div>
        <div className="text-sm opacity-90 font-medium mb-3">{title}</div>
        {subtitle && <div className="text-xs opacity-75">{subtitle}</div>}

        {/* Mini chart visualization */}
        {chart && (
          <div className="mt-4 h-8 flex items-end space-x-1">
            {chart.map((height, index) => (
              <div
                key={index}
                className="bg-white/20 rounded-sm flex-1 transition-all duration-300 group-hover:bg-white/30"
                style={{ height: `${height}%` }}
              ></div>
            ))}
          </div>
        )}
      </div>

      {/* Hover effect overlay */}
      <div className="absolute inset-0 bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-3xl"></div>
    </div>
  );
}

