'use client';

import { useSession } from 'next-auth/react';
import { useRouter } from 'next/navigation';
import { useState, useEffect } from 'react';
import Link from 'next/link';

interface PrepareJoiningItem {
  id: string;
  seafarerName: string;
  rank: string;
  vessel: string;
  principal: string;
  joinDate: string;
  status: 'DOCUMENTS_PENDING' | 'MEDICAL_PENDING' | 'TICKET_PENDING' | 'READY';
  progress: number;
}

export default function PrepareJoiningPage() {
  const { data: session, status } = useSession();
  const router = useRouter();
  const [data, setData] = useState<PrepareJoiningItem[]>([]);
  const [loading, setLoading] = useState(true);
  const [filter, setFilter] = useState<string>('ALL');

  useEffect(() => {
    if (status === 'unauthenticated') {
      router.push('/auth/signin');
    }
  }, [status, router]);

  useEffect(() => {
    // Mock data for demonstration
    const mockData: PrepareJoiningItem[] = [
      {
        id: '1',
        seafarerName: 'John Smith',
        rank: 'Captain',
        vessel: 'MV Ocean Pride',
        principal: 'PT. Ocean Line',
        joinDate: '2025-12-15',
        status: 'READY',
        progress: 100
      },
      {
        id: '2',
        seafarerName: 'Maria Garcia',
        rank: 'Chief Engineer',
        vessel: 'MV Pacific Star',
        principal: 'Global Shipping',
        joinDate: '2025-12-20',
        status: 'TICKET_PENDING',
        progress: 75
      },
      {
        id: '3',
        seafarerName: 'Ahmed Hassan',
        rank: 'Deck Officer',
        vessel: 'MV Atlantic Wave',
        principal: 'Maritime Corp',
        joinDate: '2025-12-18',
        status: 'MEDICAL_PENDING',
        progress: 60
      },
      {
        id: '4',
        seafarerName: 'Sarah Chen',
        rank: 'Chief Officer',
        vessel: 'MV Southern Cross',
        principal: 'Pacific Fleet',
        joinDate: '2025-12-25',
        status: 'DOCUMENTS_PENDING',
        progress: 40
      },
      {
        id: '5',
        seafarerName: 'Carlos Rodriguez',
        rank: '2nd Engineer',
        vessel: 'MV Indian Ocean',
        principal: 'Ocean Carriers',
        joinDate: '2025-12-22',
        status: 'READY',
        progress: 100
      }
    ];
    
    setData(mockData);
    setLoading(false);
  }, []);

  if (status === 'loading' || loading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-16 w-16 border-b-2 border-blue-600 mx-auto mb-4"></div>
          <h2 className="text-xl font-semibold text-gray-700">Loading...</h2>
        </div>
      </div>
    );
  }

  const getStatusBadge = (status: string) => {
    switch (status) {
      case 'READY':
        return <span className="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Ready to Join</span>;
      case 'TICKET_PENDING':
        return <span className="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded">Ticket Pending</span>;
      case 'MEDICAL_PENDING':
        return <span className="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded">Medical Pending</span>;
      case 'DOCUMENTS_PENDING':
        return <span className="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">Documents Pending</span>;
      default:
        return <span className="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">{status}</span>;
    }
  };

  const filteredData = filter === 'ALL' ? data : data.filter(item => item.status === filter);

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 p-8">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="mb-8">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-3xl font-bold text-gray-900 mb-2">Prepare Joining</h1>
              <p className="text-gray-600">Crew members preparing to join vessels</p>
            </div>
            <Link href="/dashboard" className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 hover:scale-105 shadow-md">
              ‚Üê Back to Dashboard
            </Link>
          </div>
        </div>

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-gray-600 text-sm">Total Preparing</p>
                <p className="text-3xl font-bold text-gray-900">{data.length}</p>
              </div>
              <div className="text-4xl">üë•</div>
            </div>
          </div>
          
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-gray-600 text-sm">Ready to Join</p>
                <p className="text-3xl font-bold text-green-600">{data.filter(d => d.status === 'READY').length}</p>
              </div>
              <div className="text-4xl">‚úÖ</div>
            </div>
          </div>
          
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-gray-600 text-sm">Pending Items</p>
                <p className="text-3xl font-bold text-yellow-600">{data.filter(d => d.status !== 'READY').length}</p>
              </div>
              <div className="text-4xl">‚è≥</div>
            </div>
          </div>
          
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-gray-600 text-sm">Avg. Progress</p>
                <p className="text-3xl font-bold text-blue-600">{Math.round(data.reduce((acc, d) => acc + d.progress, 0) / data.length)}%</p>
              </div>
              <div className="text-4xl">üìä</div>
            </div>
          </div>
        </div>

        {/* Filters */}
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
          <div className="flex items-center gap-4">
            <span className="text-sm font-medium text-gray-700">Filter by Status:</span>
            <div className="flex gap-2">
              {['ALL', 'READY', 'TICKET_PENDING', 'MEDICAL_PENDING', 'DOCUMENTS_PENDING'].map(status => (
                <button
                  key={status}
                  onClick={() => setFilter(status)}
                  className={`px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 ${
                    filter === status
                      ? 'bg-blue-600 text-white shadow-md'
                      : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                  }`}
                >
                  {status.replace('_', ' ')}
                </button>
              ))}
            </div>
          </div>
        </div>

        {/* Table */}
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Seafarer</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vessel</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Principal</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Join Date</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Progress</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {filteredData.map((item) => (
                  <tr key={item.id} className="hover:bg-gray-50">
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="font-medium text-gray-900">{item.seafarerName}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm text-gray-600">{item.rank}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm text-gray-900">{item.vessel}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm text-gray-600">{item.principal}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="text-sm text-gray-900">{new Date(item.joinDate).toLocaleDateString()}</div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      {getStatusBadge(item.status)}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <div className="flex items-center">
                        <div className="w-full bg-gray-200 rounded-full h-2 mr-2">
                          <div
                            className={`h-2 rounded-full ${
                              item.progress === 100 ? 'bg-green-600' : 
                              item.progress >= 75 ? 'bg-yellow-600' : 
                              item.progress >= 50 ? 'bg-orange-600' : 'bg-red-600'
                            }`}
                            style={{ width: `${item.progress}%` }}
                          ></div>
                        </div>
                        <span className="text-sm text-gray-600">{item.progress}%</span>
                      </div>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm">
                      <Link href={`/crew/${item.id}`} className="text-blue-600 hover:text-blue-900 font-medium">
                        View Details ‚Üí
                      </Link>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  );
}
